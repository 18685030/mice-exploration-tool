    <!-- //  video -->

    <Section class="video">

        <div id="video">
            <iframe width="100%" height="100%" src="https://www.youtube.com/embed/QGMh1YBU6a0" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
